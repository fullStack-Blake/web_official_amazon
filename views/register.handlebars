<section>
    <form action="/register" method='POST' id="register">
        <div id="register-box">

            {{!-- {{#each message}}
                <div id="registerErrors">{{this}}</div> <br>
            {{/each}} --}}

            <h2>Create account</h2> <br><br>
            <label for="firstName">First Name
            <div id="registerErrors">{{warning1}}</div></label><br>
            <input type="text" name="firstName" value={{firstName}}><br><br>

            <label for="lastName">Last Name</label>
            <div id="registerErrors">{{warning2}}</div><br>
            <input type="text" name="lastName" value={{lastName}}><br><br>

            <label for="email" >E-mail</label>
            <div id="registerErrors">{{warning3}}</div><br>
            <input type="email" name="email" value={{email}}><br><br>

            <label for="password">Password</label>
            <div id="registerErrors">{{warning4}}</div><br>
            <input type="password" placeholder="  At least 6 characters" name="password"><br><br>

            <label for="password">Password again</label>
            <div id="registerErrors">{{warning5}}</div><br>
            <input type="password" name="passwordAgain"><br>
            <div id="registerErrors">{{warning6}}</div><br>
            <div id="registerErrors">{{warning7}}</div><br>

            <input type="submit" value="Create account" id="submitButton"><br><br><br>

            <p>Already have an account? <a href="/login">Sign in</a></p>
            <br><br>
        </div>
      
    </form>
</section>