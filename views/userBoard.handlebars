<div id="div_Board">
    <br>

    <h2>User Dashboard</h2><br>


    <section class="tasks-container">




        <div>

            <table border="1" style="text-align: center;">
                <thead>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Best Seller</th>
                    <th>Picture</th>
                    <th>Modify</th>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>
                            <a href="/product/profile/{{this.id}}" class="product-title">{{this.productName}}</a>
                        </td>
                        <td>
                            <span>{{this.price}}</span>

                        </td>
                        <td>
                            <span>{{this.description}}</span>
                        </td>
                        <td>
                            <span>{{this.category}}</span>
                        </td>
                        <td>
                            <span>{{this.quantity}}</span>
                        </td>
                        <td>
                            <span>{{this.bestSeller}}</span>
                        </td>
                        <td>
                            <img id="list_img" src="/uploads/{{this.productPic}}" alt="">
                        </td>
                        <td>
                            <a href="/product/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                            <a href="/product/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                        </td>
                    </tr>
                    {{else}}
                    <td colspan="5">
                        <p>No product in Shopping Cart</p>
                    </td>

                    {{/each}}
                </tbody>
            </table>
        </div>

    </section>
    <br>
    <div id="product-links-holder">
        <a href="/product">Lets go Shopping</a>
    </div>
    <br>

</div>