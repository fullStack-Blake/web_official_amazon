<h2>Product Dashboard</h2>

<section class="products-container">

    <form method="POST" action="/product/search">
        <label>Search By</label>
        <select name="product-search">
            <option value="all">All products</option>
            <option value="open">Open products</option>
            <option value="on-hold">On Hold products</option>
            <option value="closed">Closed products</option>
            <option value="pending">Pending products</option>
            <option value="low-priority">Low Priority</option>
            <option value="medium-priority">Meidum Priority</option>
            <option value="high-priority">High Priority</option>
        </select>
        <input type="submit" value="Search">
    </form> <br><br>

    <table border="1" style="text-align: center;">
        <thead>
            <th>Title</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Operation</th>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>
                    <a href="/product/profile/{{this.id}}" class="product-title">{{this.title}}</a>
                </td>
                <td>
                    <span>{{this.priority}}</span>

                </td>
                <td>
                    <span>{{this.status}}</span>
                </td>
                <td>
                    <span>{{this.dueDate}}</span>
                </td>
                <td>
                    <a href="/product/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                    <a href="/product/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                </td>
            </tr>
            {{else}}
            <td colspan="5">
                <p>No products in database</p>
            </td>

            {{/each}}
        </tbody>
    </table>

</section>

<div id="products-links-holder">
    <a href="/product/add">Add a product</a>
</div>